<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@drawable/image"
    >

<TextView
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:gravity="center"
    android:text="THE POEM BOOK"
    android:textStyle="bold"
    android:background="@android:color/background_light"
    android:textColor="@android:color/background_dark"
    />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="right">

    </LinearLayout>

    <Button
        android:id="@+id/b1"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="60dp"
        android:background="@android:color/background_light"
        android:text="Phenomenal Woman"

        />

    <Button
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:background="@android:color/background_light"
        android:text="Where the Sidewalk Ends"
        android:layout_marginTop="20dp"
        android:id="@+id/b2"

        />
    <Button
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:background="@android:color/background_light"
        android:text="A Dream Within A Dream"
        android:layout_marginTop="20dp"
        android:id="@+id/b3"

        />
    <Button
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:background="@android:color/background_light"
        android:text="The Broken Heart"
        android:layout_marginTop="20dp"
        android:id="@+id/b4"

        />
    <Button
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:background="@android:color/background_light"
        android:text="Digging"
        android:layout_marginTop="20dp"
        android:id="@+id/b5"

        />
    <Button
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:background="@android:color/background_light"
        android:text="If You Forget Me"
        android:layout_marginTop="20dp"
        android:id="@+id/b6"

        />
    <Button
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:background="@android:color/background_light"
        android:text="There is another sky"
        android:layout_marginTop="20dp"
        android:id="@+id/b7"

        />
    <Button
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:background="@android:color/background_light"
        android:text="Romance"
        android:layout_marginTop="20dp"
        android:id="@+id/b8"

        />

    <Button
        android:id="@+id/aboutBtn"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/ic_account_circle_black_24dp"
        android:layout_gravity="center"/>


</LinearLayout>